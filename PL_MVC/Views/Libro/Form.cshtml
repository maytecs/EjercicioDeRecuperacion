@model ML.Libro
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Form</h2>
    <p>Aqui puede ver y actualizar los datos de la empresa</p>

    <div class="row">
        <div class=" col-md-12">

            @using (Html.BeginForm("Form", "Libro", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
            <div class="form-horizontal">
                <div class="form-group">

                    <div class="col-md-3">

                        @Html.LabelFor(model => model.IdLibro, new { @class = "hidden" }) @*LabelFor hace referencia a una etiqueta con texto*@

                        @Html.TextBoxFor(model => model.IdLibro, new { @class = "hidden form-control" }) @*Crea una caja de texto con el nombre que le indiquemos  y con un valor por defecto en el segundo parámetro.*@

                        @Html.ValidationMessageFor(model => model.IdLibro)

                    </div>

                </div>

                <div class="form-group">

                    <div class="col-md-3">

                        @Html.LabelFor(model => model.NombreLibro)

                        @Html.TextBoxFor(model => model.NombreLibro, new { @class = "form-control", @id = "txtNombre" })

                        @Html.ValidationMessageFor(model => model.NombreLibro)

                    </div>

                </div>
                <div class="form-group">

                    <div class="col-md-3">

                        @Html.LabelFor(model => model.Autor.IdAutor)

                        @Html.DropDownListFor(model => model.Autor.IdAutor, new SelectList(Model.Autor.Autores, "IdAutor", "NombreAutor"), "Seleccione el autor", new { @class = "form-control" })

                        @Html.ValidationMessageFor(model => model.Autor.IdAutor)

                    </div>

                </div>
                <div class="form-group">

                    <div class="col-md-3">

                        @Html.LabelFor(model => model.NumeroPaginas)

                        @Html.TextBoxFor(model => model.NumeroPaginas, new { @class = "form-control", @id = "txtNumeroPaginas" })

                        @Html.ValidationMessageFor(model => model.NumeroPaginas)

                    </div>

                </div>
                <div class="form-group">

                    <div class="col-md-3">

                        @Html.LabelFor(model => model.FechaPublicacion)

                        @Html.TextBoxFor(model => model.FechaPublicacion, new { @class = "form-control", @id = "txtFechaPublicacion" })

                        @Html.ValidationMessageFor(model => model.FechaPublicacion)

                    </div>

                </div>

                <div class="form-group">

                    <div class="col-md-3">

                        @Html.LabelFor(model => model.Editorial.IdEditorial)

                        @Html.DropDownListFor(model => model.Editorial.IdEditorial, new SelectList(Model.Editorial.Editoriales, "IdEditorial", "NombreEditorial"), "Seleccione la editorial", new { @class = "form-control" })

                        @Html.ValidationMessageFor(model => model.Editorial.IdEditorial)

                    </div>

                </div>
                <div class="form-group">

                    <div class="col-md-3">

                        @Html.LabelFor(model => model.Edicion)

                        @Html.TextBoxFor(model => model.Edicion, new { @class = "form-control", @id = "txtEdicion" })

                        @Html.ValidationMessageFor(model => model.Edicion)

                    </div>

                </div>

                <div class="form-group">

                    <div class="col-md-3">

                        @Html.LabelFor(model => model.Genero.IdGenero)

                        @Html.DropDownListFor(model => model.Genero.IdGenero, new SelectList(Model.Genero.Generos, "IdGenero", "NombreGenero"), "Seleccione un genero", new { @class = "form-control" })

                        @Html.ValidationMessageFor(model => model.Genero.IdGenero)

                    </div>

                </div>

                <div class="form-group">

                    <div class="col-md-3">

                        <input type="submit" value="Guardar" class="btn btn-success" />
                        @*Se crea el boton de guardar*@

                        @Html.ActionLink("Regresar", "GetAll", "Libro", htmlAttributes: new { @class = "btn btn-danger" })
                        @*Se crea el boton de regresar se regresa al metodo GetAll en el controlador de usuario*@
                    </div>

                </div>

            </div>
            }

        </div>


    </div>

</div>

